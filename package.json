{
    "name": "qv-writer",
    "private": true,
    "keywords": [
        "novel",
        "fiction"
    ],
    "author": "秋无衣",
    "license": "MIT",
    "workspaces": [
        "packages/no"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/prettier": "2.1.5",
        "husky": "4.3.0",
        "lint-staged": "10.5.2",
        "prettier": "2.2.1"
    },
    "scripts": {
        "build": " node ./scripts/build.js ",
        "install-node-module": " node ./scripts/install-node-module.js "
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/**/*.{js,jsx,json,ts,tsx,css,scss}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,ts}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "arrowParens": "always"
    }
}
