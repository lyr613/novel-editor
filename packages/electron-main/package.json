{
    "name": "qsoft-writer-electron",
    "main": "electron.js",
    "version": "0.1.3",
    "author": "秋无衣",
    "description": "小说编辑器",
    "scripts": {
        "watch": " node ./scripts/watch.js ",
        "electron-start": " node ./scripts/electron-start.js ",
        "build": " node ./scripts/build.js ",
        "electron-build": " node ./scripts/electron-build.js "
    },
    "dependencies": {
        "directory-named-webpack-plugin": "^4.0.1",
        "file-loader": "^6.2.0",
        "images": "^3.2.3",
        "joi": "^17.3.0",
        "os-browserify": "^0.3.0",
        "prettier": "^2.2.1",
        "stream-browserify": "^3.0.0",
        "ts-loader": "^8.0.11",
        "typescript": "^4.1.3",
        "util": "^0.12.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/node": "^14.14.7",
        "clean-webpack-plugin": "^3.0.0",
        "electron": "^12.0.0-beta.30",
        "electron-builder": "^22.9.1",
        "path-browserify": "^1.0.1",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0"
    },
    "repository": "https://github.com/lyr613/novel-editer",
    "publish": [
        "github"
    ],
    "build": {
        "productName": "qv-writer",
        "appId": "org.simulatedgreg.qvwriter",
        "directories": {
            "output": "build-final"
        },
        "files": [
            "./*",
            "./build/**",
            "./build-page/**"
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "shortcutName": "秋衣小说编辑器"
        },
        "win": {
            "artifactName": "${productName}_setup_${version}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ],
            "icon": "public/icon/icon.ico"
        }
    }
}
